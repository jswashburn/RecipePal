@page
@model IndexModel

<div class="text-center">
    <h1 class="display-4">Top Cookbooks</h1>
    
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(m => m.Cookbooks[0].Title)</th>
                <th>@Html.DisplayNameFor(m => m.Cookbooks[0].User)</th>
                <th>@Html.DisplayNameFor(m => m.Cookbooks[0].CreatedAt)</th>
                <th>@Html.DisplayNameFor(m => m.Cookbooks[0].Likes)</th>
                <th>@Html.DisplayNameFor(m => m.Cookbooks[0].Dislikes)</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var cookbook in Model.Cookbooks)
            {
            <tr>
                <td><a asp-page="Cookbooks/Index" asp-route-id="@cookbook.Id">@cookbook.Title</a></td>
                <td>@cookbook.User.Username</td>
                <td>@cookbook.CreatedAt.ToShortDateString()</td>
                <td>@cookbook.Likes</td>
                <td>@cookbook.Dislikes</td>
            </tr>
            }
        </tbody>
    </table>
</div>
